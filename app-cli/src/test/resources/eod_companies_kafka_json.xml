<?xml version="1.0" encoding="UTF-8" ?>
<etl-config id="eod-companies">

    <triggers>
        <StartUpTrigger flow-ref="AMEX" />
        <StartUpTrigger flow-ref="NASDAQ" />
        <StartUpTrigger flow-ref="NYSE" />
        <StartUpTrigger flow-ref="OTCBB" />
    </triggers>

    <flows>
        <BasicFlow id="AMEX" input="AMEX.txt" output="kafka-topic" input-layout="tabbed-delimited" output-layout="json-output"/>
        <BasicFlow id="NASDAQ" input="NASDAQ.txt" output="kafka-topic" input-layout="tabbed-delimited" output-layout="json-output"/>
        <BasicFlow id="NYSE" input="NYSE.txt" output="kafka-topic" input-layout="tabbed-delimited" output-layout="json-output"/>
        <BasicFlow id="OTCBB" input="OTCBB.txt" output="kafka-topic" input-layout="tabbed-delimited" output-layout="json-output"/>
    </flows>

    <devices>
        <TextFileInputDevice id="AMEX.txt" path="./app-cli/src/test/resources/files/AMEX.txt" />
        <TextFileInputDevice id="NASDAQ.txt" path="./app-cli/src/test/resources/files/NASDAQ.txt" />
        <TextFileInputDevice id="NYSE.txt" path="./app-cli/src/test/resources/files/NYSE.txt" />
        <TextFileInputDevice id="OTCBB.txt" path="./app-cli/src/test/resources/files/OTCBB.txt" />
        <KafkaOutputDevice id="kafka-topic" topic="shocktrade.companies.json" connectionString="vault114:2181" />
    </devices>

    <layouts>
        <TextLayout id="tabbed-delimited">
            <header>
                <fields type="delimited" delimiter="\t">
                    <field auto-trim="yes">label1</field>
                    <field auto-trim="yes">label2</field>
                </fields>
            </header>
            <body>
                <fields type="delimited" delimiter="\t">
                    <field auto-trim="yes">symbol</field>
                    <field auto-trim="yes">description</field>
                </fields>
            </body>
        </TextLayout>

        <TextLayout id="json-output">
            <body>
                <fields type="json">
                    <field>symbol</field>
                    <field>description</field>
                </fields>
            </body>
        </TextLayout>
    </layouts>
</etl-config>