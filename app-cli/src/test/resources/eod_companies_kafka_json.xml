<?xml version="1.0" encoding="UTF-8" ?>
<story id="eod-companies">

    <import path="./app-cli/src/test/resources/global_settings.xml" />

    <triggers>
        <StartUpTrigger id="Files_Combiner">
            <flows>
                <BasicFlow id="AMEX" input="AMEX.txt" output="kafka-topic" input-layout="eod_company_input_layout" output-layout="json-output"/>
                <BasicFlow id="NASDAQ" input="NASDAQ.txt" output="kafka-topic" input-layout="eod_company_input_layout" output-layout="json-output"/>
                <BasicFlow id="NYSE" input="NYSE.txt" output="kafka-topic" input-layout="eod_company_input_layout" output-layout="json-output"/>
                <BasicFlow id="OTCBB" input="OTCBB.txt" output="kafka-topic" input-layout="eod_company_input_layout" output-layout="json-output"/>
            </flows>
        </StartUpTrigger>
    </triggers>

    <data-sources>
        <TextFileInputSource id="AMEX.txt" path="./app-cli/src/test/resources/files/AMEX.txt" />
        <TextFileInputSource id="NASDAQ.txt" path="./app-cli/src/test/resources/files/NASDAQ.txt" />
        <TextFileInputSource id="NYSE.txt" path="./app-cli/src/test/resources/files/NYSE.txt" />
        <TextFileInputSource id="OTCBB.txt" path="./app-cli/src/test/resources/files/OTCBB.txt" />
        <KafkaOutputSource id="kafka-topic" topic="shocktrade.companies.json" connectionString="vault114:2181" />
    </data-sources>

    <layouts>
        <TextLayout id="json-output">
            <body>
                <record format="json">
                    <field>symbol</field>
                    <field>description</field>
                </record>
            </body>
        </TextLayout>
    </layouts>
</story>