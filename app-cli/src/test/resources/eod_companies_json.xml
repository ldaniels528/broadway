<?xml version="1.0" encoding="UTF-8" ?>
<story id="eod-companies">

    <triggers>
        <StartUpTrigger id="File_Combining_Trigger">
            <CompositeInputFlow id="combiner" output-source="output.txt">
                <include input-source="AMEX.txt" />
                <include input-source="NASDAQ.txt" />
                <include input-source="NYSE.txt" />
                <include input-source="OTCBB.txt" />
            </CompositeInputFlow>
        </StartUpTrigger>
    </triggers>

    <data-sources>
        <TextFileInputSource id="AMEX.txt" path="./app-cli/src/test/resources/files/AMEX.txt" layout="tabbed-delimited" />
        <TextFileInputSource id="NASDAQ.txt" path="./app-cli/src/test/resources/files/NASDAQ.txt" layout="tabbed-delimited" />
        <TextFileInputSource id="NYSE.txt" path="./app-cli/src/test/resources/files/NYSE.txt" layout="tabbed-delimited" />
        <TextFileInputSource id="OTCBB.txt" path="./app-cli/src/test/resources/files/OTCBB.txt" layout="tabbed-delimited" />
        <TextFileOutputSource id="output.txt" path="/tmp/eod_companies_json.txt" layout="json-output" />
    </data-sources>

    <layouts>
        <MultiPartLayout id="tabbed-delimited">
            <header>
                <record id="delimited_header" type="delimited" delimiter="\t">
                    <field name="symbol" value="Symbol" type="string"/>
                    <field name="description" value="Description" type="string"/>
                </record>
            </header>
            <body>
                <record id="delimited_body" type="delimited" delimiter="\t">
                    <field name="symbol" type="string"/>
                    <field name="description" type="string"/>
                </record>
            </body>
        </MultiPartLayout>

        <MultiPartLayout id="json-output">
            <body>
                <record id="json_body" type="json">
                    <field name="symbol" type="string" value="{{ delimited_body.symbol }}" />
                    <field name="description" type="string" value="{{ delimited_body.description }}" />
                </record>
            </body>
        </MultiPartLayout>
    </layouts>
</story>