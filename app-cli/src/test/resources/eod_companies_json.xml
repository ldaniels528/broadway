<?xml version="1.0" encoding="UTF-8" ?>
<etl-config id="eod-companies">

    <triggers>
        <StartUpTrigger id="Files_Combiner">
            <flows>
                <BasicFlow id="AMEX" input="AMEX.txt" output="output.txt" input-layout="tabbed-delimited" output-layout="json-output"/>
                <BasicFlow id="NASDAQ" input="NASDAQ.txt" output="output.txt" input-layout="tabbed-delimited" output-layout="json-output"/>
                <BasicFlow id="NYSE" input="NYSE.txt" output="output.txt" input-layout="tabbed-delimited" output-layout="json-output"/>
                <BasicFlow id="OTCBB" input="OTCBB.txt" output="output.txt" input-layout="tabbed-delimited" output-layout="json-output"/>
            </flows>
        </StartUpTrigger>
    </triggers>

    <devices>
        <TextFileInputDevice id="AMEX.txt" path="./app-cli/src/test/resources/files/AMEX.txt"/>
        <TextFileInputDevice id="NASDAQ.txt" path="./app-cli/src/test/resources/files/NASDAQ.txt"/>
        <TextFileInputDevice id="NYSE.txt" path="./app-cli/src/test/resources/files/NYSE.txt"/>
        <TextFileInputDevice id="OTCBB.txt" path="./app-cli/src/test/resources/files/OTCBB.txt"/>
        <TextFileOutputDevice id="output.txt" path="/tmp/output_json.txt"/>
    </devices>

    <layouts>
        <TextLayout id="tabbed-delimited">
            <header>
                <fields type="delimited" delimiter="\t">
                    <field auto-trim="yes">label1</field>
                    <field auto-trim="yes">label2</field>
                </fields>
            </header>
            <body>
                <fields type="delimited" delimiter="\t">
                    <field auto-trim="yes">symbol</field>
                    <field auto-trim="yes">description</field>
                </fields>
            </body>
        </TextLayout>

        <TextLayout id="json-output">
            <body>
                <fields type="json">
                    <field>symbol</field>
                    <field>description</field>
                </fields>
            </body>
        </TextLayout>
    </layouts>
</etl-config>