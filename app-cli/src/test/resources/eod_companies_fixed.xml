<?xml version="1.0" encoding="UTF-8" ?>
<etl-config id="eod-companies">

    <triggers>
        <StartUpTrigger id="Files_Combiner">
            <flows>
                <BasicFlow id="AMEX" input="AMEX.txt" output="fixed_output" input-layout="tabbed-delimited" output-layout="fixed-length-output"/>
                <BasicFlow id="NASDAQ" input="NASDAQ.txt" output="fixed_output" input-layout="tabbed-delimited" output-layout="fixed-length-output"/>
                <BasicFlow id="NYSE" input="NYSE.txt" output="fixed_output" input-layout="tabbed-delimited" output-layout="fixed-length-output"/>
                <BasicFlow id="OTCBB" input="OTCBB.txt" output="fixed_output" input-layout="tabbed-delimited" output-layout="fixed-length-output"/>
            </flows>
        </StartUpTrigger>
    </triggers>

    <devices>
        <TextFileInputSource id="AMEX.txt" path="./app-cli/src/test/resources/files/AMEX.txt" />
        <TextFileInputSource id="NASDAQ.txt" path="./app-cli/src/test/resources/files/NASDAQ.txt" />
        <TextFileInputSource id="NYSE.txt" path="./app-cli/src/test/resources/files/NYSE.txt" />
        <TextFileInputSource id="OTCBB.txt" path="./app-cli/src/test/resources/files/OTCBB.txt" />
        <TextFileOutputSource id="fixed_output" path="/tmp/eod_companies_fixed.txt" />
    </devices>

    <layouts>
        <TextLayout id="tabbed-delimited">
            <header>
                <fields type="delimited" delimiter="\t">
                    <field auto-trim="yes">Symbol</field>
                    <field auto-trim="yes">Description</field>
                </fields>
            </header>
            <body>
                <fields type="delimited" delimiter="\t">
                    <field auto-trim="yes">symbol</field>
                    <field auto-trim="yes">description</field>
                </fields>
            </body>
        </TextLayout>

        <TextLayout id="fixed-length-output">
            <header>
                <fields type="delimited" delimiter="\t">
                    <field auto-trim="yes">Ticker</field>
                    <field auto-trim="yes">Description</field>
                </fields>
            </header>
            <body>
                <fields type="fixed-length">
                    <field length="10">Symbol</field>
                    <field length="40">Description</field>
                </fields>
            </body>
        </TextLayout>
    </layouts>
</etl-config>