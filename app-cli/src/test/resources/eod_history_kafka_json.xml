<?xml version="1.0" encoding="UTF-8" ?>
<story id="eod-history-fixed">

    <import path="./app-cli/src/test/resources/global_settings.xml" />

    <triggers>
        <FileTrigger id="trading_history_trigger">
            <directory path="{{ user.home }}/broadway/incoming/tradingHistory" archive="DataStore">
                <feed pattern="AMEX_(.*)[.]txt">
                    <SimpleFlow id="amex_flow" input-source="input_file" output-source="kafka_topic" />
                </feed>
                <feed pattern="NASDAQ_(.*)[.]txt">
                    <SimpleFlow id="nasdaq_flow" input-source="input_file" output-source="kafka_topic" />
                </feed>
                <feed pattern="NYSE_(.*)[.]txt">
                    <SimpleFlow id="nyse_flow" input-source="input_file" output-source="kafka_topic" />
                </feed>
                <feed pattern="OTCBB_(.*)[.]txt">
                    <SimpleFlow id="otcbb_flow" input-source="input_file" output-source="kafka_topic" />
                </feed>
            </directory>
        </FileTrigger>
    </triggers>

    <data-sources>
        <TextFileInputSource id="input_file" path="{{ flow.input.path }}" layout="eod_history_input_layout" />
        <KafkaOutputSource id="kafka_topic" topic="shocktrade.companies.json" connectionString="vault114:2181" layout="json_output" />
    </data-sources>

    <layouts>
        <MultiPartLayout id="json_output">
            <body>
                <record id="output_body" format="fixed">
                    <field name="symbol" type="string" length="10">{{ ticker }}</field>
                    <field name="date" type="date" length="15">{{ date | date:parse:"yyyyMMdd" }}</field>
                    <field name="open" type="string" length="12">{{ open }}</field>
                    <field name="high" type="string" length="12">{{ high }}</field>
                    <field name="low" type="string" length="12">{{ low }}</field>
                    <field name="close" type="string" length="12">{{ close }}</field>
                    <field name="volume" type="string" length="12">{{ volume }}</field>
                </record>
            </body>
        </MultiPartLayout>
    </layouts>
</story>