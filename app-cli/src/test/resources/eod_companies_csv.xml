<?xml version="1.0" encoding="UTF-8" ?>
<etl-config id="eod-companies">
    <flows>
        <BasicFlow id="AMEX" input="AMEX.txt" output="output.txt" input-layout="tabbed-delimited" output-layout="csv-output"/>
        <BasicFlow id="NASDAQ" input="NASDAQ.txt" output="output.txt" input-layout="tabbed-delimited" output-layout="csv-output"/>
        <BasicFlow id="NYSE" input="NYSE.txt" output="output.txt" input-layout="tabbed-delimited" output-layout="csv-output"/>
        <BasicFlow id="OTCBB" input="OTCBB.txt" output="output.txt" input-layout="tabbed-delimited" output-layout="csv-output"/>
    </flows>

    <devices>
        <TextInputDevice id="AMEX.txt" path="./app-cli/src/test/resources/files/AMEX.txt" />
        <TextInputDevice id="NASDAQ.txt" path="./app-cli/src/test/resources/files/NASDAQ.txt" />
        <TextInputDevice id="NYSE.txt" path="./app-cli/src/test/resources/files/NYSE.txt" />
        <TextInputDevice id="OTCBB.txt" path="./app-cli/src/test/resources/files/OTCBB.txt" />
        <TextOutputDevice id="output.txt" path="/tmp/output_csv.txt" />
    </devices>

    <layouts>
        <TextLayout id="tabbed-delimited">
            <header>
                <fields type="delimited" delimiter="\t">
                    <field auto-trim="yes">Symbol</field>
                    <field auto-trim="yes">Description</field>
                </fields>
            </header>
            <body>
                <fields type="delimited" delimiter="\t">
                    <field auto-trim="yes">symbol</field>
                    <field auto-trim="yes">description</field>
                </fields>
            </body>
        </TextLayout>

        <TextLayout id="csv-output">
            <header>
                <fields type="delimited" delimiter="\t">
                    <field auto-trim="yes">Ticker</field>
                    <field auto-trim="yes">Company</field>
                </fields>
            </header>
            <body>
                <fields type="csv">
                    <field auto-trim="yes">symbol</field>
                    <field auto-trim="yes">description</field>
                </fields>
            </body>
        </TextLayout>
    </layouts>
</etl-config>